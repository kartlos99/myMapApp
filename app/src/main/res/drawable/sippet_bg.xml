<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <gradient android:endColor="#fff" android:startColor="#0cd" android:type="linear" android:angle="45" />
            <size
                android:width="200dp"
                android:height="160dp" />
        </shape>
    </item>
    <item>
        <inset android:drawable="@drawable/ic_info"></inset>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#d2e7ecdb"/>
            <corners android:radius="6dp" />
            <stroke
                android:width="1dp"
                android:color="#66aa66"
                android:dashWidth="10dp"
                android:dashGap="4dp" />
            <size
                android:width="180dp"
                android:height="150dp" />
        </shape>
    </item>

</layer-list>